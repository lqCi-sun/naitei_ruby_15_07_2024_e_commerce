<thead>
  <tr>
    <th><%= t ".order_id" %></th>
    <th><%= t ".product_image" %></th>
    <% if @current_status.to_sym == :all %>
      <th>
        <%= link_to t(".status"), orders_path_for_current_role(:status) %>
      </th>
    <% else %>
      <th><%= t ".status" %></th>
    <% end %>
    <th><%= t ".total" %></th>
    <th>
      <%= link_to t(".placed_at"), orders_sort_path(:created_at, params[:status]) %>
    </th>
    <th><%= t ".updated_at" %></th>
    <th>
      <% if @orders.any? {|order| order.status.to_sym == :cancelled} %>
        <%= t ".refuse_reason" %>
      <% elsif @orders.any? {|order| order.status.to_sym == :delivered} %>
        <%= t ".received_by" %>
      <% elsif display_action_column?(@orders, current_user) %>
        <%= t ".action" %>
      <% end %>
    </th>
  </tr>
</thead>
